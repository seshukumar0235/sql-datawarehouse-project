-- use dataWarehouse;

select * from silver.crm_cust_info;

--delete from silver.crm_cust_info where cst_key = 'PO25';

select * from silver.erp_cust_az12;
 

-- creating a dimension tables for customer information
create view gold.dim_customers as
select
	ROW_NUMBER() over(order by ci.cst_id) as customer_key,
	ci.cst_id as customer_id,
	ci.cst_key as customer_number,
	ci.cst_firstname as first_name,
	cst_lastname as last_name,
	la.cntry as country,
	cst_marital_status as marital_status,
	case when ci.cst_gndr = 'n/a' then ci.cst_gndr
		else coalesce(ca.gen,'n/a')
	end as gender,
	ca.bdate as birthdate, 
	cst_create_date as create_date
from silver.crm_cust_info as ci 
left join silver.erp_cust_az12 as ca 
on  ci.cst_key = ca.cid 
left join silver.erp_loc_a101 as la
on ci.cst_key = la.cid ; 

-- creating a dimension tables for product information

select * from silver.crm_prd_info;
select * from silver.erp_px_cat_g1v2;

-- drop view gold.dim_products;

create view gold.dim_products as
select 
	ROW_NUMBER() over(order by pi.prd_start_dt,pi.prd_key) as product_key,
	pi.prd_id as product_id,
	pi.prd_key as product_number,
    pi.prd_nm as product_name,
	pi.cat_id as category_id,
	pc.cat as category,
	pc.subcat as subcategory,
	pc.maintenance,
	pi.prd_cost as product_cost,
	pi.prd_line as product_line,
	pi.prd_start_dt as start_date
from silver.crm_prd_info as pi
left join silver.erp_px_cat_g1v2 as pc
on pi.cat_id = pc.id
where pi.prd_end_dt is null --removing historical data

-- creating a gold layer tables for sales information
create  view gold.fact_sales as
select 
	sd.sls_ord_num as order_number,
	gp.product_key,
	gc.customer_key,
	sd.sls_order_dt as order_date,
	sd.sls_ship_dt as shipping_date,
	sd.sls_due_dt as due_date,
	sd.sls_sales as sales_amount,
	sd.sls_quantity as quantity,
	sd.sls_price as price
from silver.crm_sales_details as sd
left join gold.dim_products as gp
on sd.sls_prd_key = gp.product_number
left join gold.dim_customers as gc
on sd.sls_cust_id = gc.customer_id;





